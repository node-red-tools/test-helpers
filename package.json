    },
    "homepage": "https://github.com/node-red-tools/test-helpers#readme",
    "scripts": {
        "test": "cross-env NODE_ENV=test mocha --timeout 600000 --require ts-node/register --watch-extensions ts src/**/*.test.ts src/*.test.ts",
