        "axios": "^0.19.2",
        "@types/retry": "^0.12.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "cross-env": "^6.0.3",
        "husky": "^4.0.6",
        "mocha": "^7.0.1",
        "node-red": "^1.0.3",
        "prettier": "^1.19.1",
        "pretty-quick": "^2.0.1",
